@using armyTec.ViewModel
@model addInvoiceVM

<form method="post" action="/invoiceData/addnewinvoice" >
    <input type="text" value="@Model.headerId" name="headerId" class="form-control" hidden>
  <div class="form-group">
    <label >Item Name</label>
    <input type="text" required class="form-control" asp-for="ItemName">
    
  </div>
  <div class="form-group">
    <label >Item Count</label>
    <input type="number" required class="form-control" asp-for="ItemCount">
    
  </div>
  <div class="form-group">
    <label >Item Price</label>
    <input type="number" required class="form-control" asp-for="ItemPrice">
    
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>